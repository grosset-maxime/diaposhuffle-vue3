{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    // workaround for https://github.com/vuejs/tsconfig/issues/6
    "preserveValueImports": false,
    // "importsNotUsedAsValues": "remove",
    "verbatimModuleSyntax": true,
    // end workaround
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}